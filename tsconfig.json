{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "bun"
    ],
    "allowJs": false
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "bench/**/*.ts",
    "scripts/**/*.ts"
  ]
}
